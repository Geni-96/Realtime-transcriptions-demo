{
  "manifest_version": 3,
  "name": "Realtime Transcriptions Demo",
  "description": "Chrome extension scaffold for real-time audio transcription (JavaScript).",
  "version": "0.1.0",
  "permissions": [
  "tabCapture",
  "tabs",
  "activeTab",
  "sidePanel",
  "storage"
  ],
  "background": {
    "service_worker": "src/background/serviceWorker.js",
    "type": "module"
  },
  "host_permissions": [
  "https://generativelanguage.googleapis.com/*",
  "http://*/*",
  "https://*/*"
  ],
  "side_panel": {
    "default_path": "src/sidepanel/sidepanel.html"
  },
  "action": {
    "default_title": "Realtime Transcriptions",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-100.png"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-100.png"
  }
}
